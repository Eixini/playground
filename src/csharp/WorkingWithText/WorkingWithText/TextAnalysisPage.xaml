<Page x:Class="WorkingWithText.TextAnalysisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkingWithText"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="TextAnalysisPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="EntryTextBox"
                 Grid.Row="0"
                 Margin="5"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="TextAnalysisButton"
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Click="TextAnalysis_Click">
                Анализ текста
            </Button>

            <Button x:Name="TextReverseInputButton"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Click="TextReverseTranslit_Click">
                Реверсировать транслит
            </Button>
        </Grid>

        <TextBox x:Name="ResultTextBox"
                 Grid.Row="2"
                 Margin="5"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"/>
    </Grid>
</Page>
