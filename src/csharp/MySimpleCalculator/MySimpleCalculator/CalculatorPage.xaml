<Page x:Class="MySimpleCalculator.CalculatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MySimpleCalculator"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="300"
      Title="CalculatorPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Грид дисплея -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="PreviewText"
                     Grid.Row="0"
                     IsReadOnly="True"
                     TextAlignment="Right"
                     VerticalContentAlignment="Center"
                     FontSize="24"/>

            <TextBox x:Name="ResultText"
                     Grid.Row="1"
                     IsReadOnly="True"
                     TextAlignment="Right"
                     VerticalContentAlignment="Center"
                     FontSize="18"/>

        </Grid>

        <!-- Грид кнопок -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ACButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="AC"
                    Click="ACButton_Click" />

            <Button x:Name="Button"
                    Grid.Row="0"
                    Grid.Column="1"
                    Content=""
                    Click="Button_Click" />

            <Button x:Name="PercentButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    Content="%"
                    Click="PercentButton_Click" />

            <Button x:Name="DivisionButton"
                    Grid.Row="0"
                    Grid.Column="3"
                    Content="/"
                    Click="DivisionButton_Click" />



            <Button x:Name="Button7"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="7"
                    Click="Button7_Click" />

            <Button x:Name="Button8"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="8"
                    Click="Button8_Click" />

            <Button x:Name="Button9"
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="9"
                    Click="Button9_Click" />

            <Button x:Name="MultiplicationButton"
                    Grid.Row="1"
                    Grid.Column="3"
                    Content="*"
                    Click="MultiplicationButton_Click" />



            <Button x:Name="Button4"
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="4"
                    Click="Button4_Click" />

            <Button x:Name="Button5"
                    Grid.Row="2"
                    Grid.Column="1"
                    Content="5"
                    Click="Button5_Click" />

            <Button x:Name="Button6"
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="6"
                    Click="Button6_Click" />

            <Button x:Name="SubtractionButton"
                    Grid.Row="2"
                    Grid.Column="3"
                    Content="-"
                    Click="SubtractionButton_Click" />



            <Button x:Name="Button1"
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="1"
                    Click="Button1_Click" />

            <Button x:Name="Button2"
                    Grid.Row="3"
                    Grid.Column="1"
                    Content="2"
                    Click="Button2_Click" />

            <Button x:Name="Button3"
                    Grid.Row="3"
                    Grid.Column="2"
                    Content="3"
                    Click="Button3_Click" />

            <Button x:Name="AdditionButton"
                    Grid.Row="3"
                    Grid.Column="3"
                    Content="+"
                    Click="AdditionButton_Click" />



            <Button x:Name="SeparatorButton"
                    Grid.Row="4"
                    Grid.Column="0"
                    Content=","
                    Click="SeparatorButton_Click" />

            <Button x:Name="Button0"
                    Grid.Row="4"
                    Grid.Column="1"
                    Content="0"
                    Click="Button0_Click" />

            <Button x:Name="ClearOneButton"
                    Grid.Row="4"
                    Grid.Column="2"
                    Content="X"
                    Click="ClearOneButton_Click" />

            <Button x:Name="EqualsButton"
                    Grid.Row="4"
                    Grid.Column="3"
                    Content="="
                    Click="EqualsButton_Click" />

        </Grid>
        
    </Grid>
</Page>
